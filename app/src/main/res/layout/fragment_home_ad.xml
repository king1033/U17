<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_home_ad_ll_content"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_home_ad_vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/fragment_home_ad_ll_indactor"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/guide_image_indcator"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/guide_image_indcator"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/guide_image_indcator"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/guide_image_indcator"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/guide_image_indcator"/>
        </LinearLayout>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/fragment_home_ad_rg_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@id/fragment_home_ad_ll_content"
        android:layout_height="90dp">
        <RadioButton
            android:id="@+id/fragment_home_ad_rb_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="排行"
            android:drawableTop="@drawable/main_boutique_head_point_ranking"/>
        <RadioButton
            android:id="@+id/fragment_home_ad_rb_signed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="排行"
            android:drawableTop="@drawable/icon_signed"/>
        <RadioButton
            android:id="@+id/fragment_home_ad_rb_special"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="排行"
            android:drawableTop="@drawable/main_boutique_head_point_special"/>
        <RadioButton
            android:id="@+id/fragment_home_ad_rb_animation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="排行"
            android:drawableTop="@drawable/main_boutique_head_point_animation"/>
    </RadioGroup>
</RelativeLayout>